<html>
<head>
  <title>DORMUS</title>
  <!--<link rel="shortcut icon" href="/assets/h-logo2.ico" />-->
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,600,700' rel='stylesheet' type='text/css'>
</head>
<body>
  <div class="default_bg container-fluid">

    <div class="card">
      <div class="card_header" style="padding-left:3vw;">
      <div class="row">
        <div class="col-md-1">
          
        </div>
        <div class="col-md-2">
           Applicant
        </div>
        <div class="col-md-2">
          Requested Room
        </div>
        <div class="col-md-2">
          Given
        </div>
        <div class="col-md-2">
          Status
        </div>
        <div class="col-md-3">
          Actions
        </div>
        </div>
        
      </div>
      <div class="container-fluid p1_abox">
        
      <br><br><br><br>
      <br><br><br>
      <div class="scrollbox"style="padding-left:3vw;">
    <% @applicants.each do |applicant| %>
      <div class="row indexappli">

        <div class="col-md-1"><%=image_tag applicant.image_path.url,:style=>"width:45px;margin-top:-18px;"%></div>
        <div class="col-md-2" ><%= applicant.first_name %> <%= applicant.middle_initial %> <%= applicant.last_name %></div>
        <div class="col-md-2"><%= applicant.room_type %></div>
        <div class="col-md-2">
        <%if applicant.room_number==nil%>
          <%=collection_select(:post, :applicant_id, Room.all, :room_number, :room_number, {prompt: '---'}, { :onchange=>"window.location='#{room_select_path(applicant.id)}?room_number=' + this.value"})%>
        <%else%>
          <%=collection_select(:post, :applicant_id, Room.all, :room_number, :room_number, {selected: applicant.room_number}, { :onchange=>"window.location='#{room_select_path(applicant.id)}?room_number=' + this.value"})%>
        <%end%>

        </div>
        <div class="col-md-2"><%=applicant.stage%></div>
        <div class="col-md-3">
        <%if applicant.stage=="Pending"%>
        <%=link_to "Approve", approve_path(applicant.id), :controller=> "applicants",:action=>:approve, method: 'post' %>
        <%else%>
        <%=link_to "Create Account", create_account_path(applicant.id), :controller=> "applicants",:action=>:create_account, method: 'post' %>
        <%end%>
        &nbsp&nbsp&nbsp<%= link_to 'Show', applicant %> &nbsp&nbsp&nbsp<%= link_to 'Edit', edit_applicant_path(applicant) %> &nbsp&nbsp&nbsp<%= link_to 'Reject', applicant, method: :delete, data: { confirm: 'Are you sure?' } %></div>
        
      </div>
      <hr>
    <% end %>
    </div>


      </div>



    </div>

  </div>
</body>
<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="bootstrap.min.js"></script>
</html>
