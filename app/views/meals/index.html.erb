

<!DOCTYPE html>
<html>
<head>
<% @date1 = Date.today  %> 
  <title>DORMUS</title>
  <!--<link rel="shortcut icon" href="/assets/h-logo2.ico" />-->
  <link href='https://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,600,700' rel='stylesheet' type='text/css'>
</head>

<body>
  <div class="default_bg container-fluid">
    <div class="card">
      <div class="card_header">
      <!-- Tab for switching between views-->
      <center>Meal Plans</center>
      <span style="">

      <a style="float:left;color:white!important;margin-top:-20px;font-size:20px;padding-left:35px;font-weight:700;" data-toggle="modal" data-target="#myModal">
        +

      </a>
      <%=link_to "View Today's Plans", today_food_path, :style=>"color:white!important;float:right;padding-right:53px;margin-top:-20px;"%></span>
      </div>

    <div class="container-fluid p1_abox">
    <!-- Display of today's meal-->

        <div id="tab-1" class="tab-content row fp-row">
          <% @meals.each do |meal| %>
          <div class="col-md-3">
              <div class="fp-card">
              <span class="fpmeal"><%= meal.name %></span>
              <br><br>
              <span class="fp-header">Breakfast</span><br><br>
              <span><%= meal.breakfast_meal %></span><br>
              <span><%= meal.breakfast_drink %></span><br>
              <br>
              <span class="fp-header">Lunch</span><br>
              <br>
              <span><%= meal.lunch_meal %></span><br>
              <span><%= meal.lunch_drink %></span><br>
              <br>
              <span class="fp-header">Dinner</span><br>
              <br>
              <span><%= meal.dinner_meal %></span><br>
              <span><%= meal.dinner_drink %></span><br>
              <br><br>
              <span><%= meal.price %></span>
              <br>

              </div>
          </div>
      
    <% end %>

        
        </div>
        
    </div>



    </div>


  </div>
    <div id="myModal" class="modal fade" role="dialog" style="">
  <div class="modal-dialog modal-lg" style="margin-top:22vh;">

    <!-- Modal content-->
    <div class="modal-content"style="background-color:#efefef;">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" style="color:white;opacity: 1;">&times;</button>
        <center>
        Add New Meal
        </center>
      </div>
      <div class="modal-body">
        <%= simple_form_for(@meal) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
  <center>
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-4">
      <%= f.input :name,:style=>"display: block;" %>
      </div>
    </div>
        <br>
    <hr class="hr-meals">
    
    <div class="row">
      <div class="col-md-4">
      <b>Breakfast</b>
        <%= f.input_field :breakfast_meal,:style=>"display: block;padding-left:5px;",:placeholder => "Dish" %><br>
      <%= f.input_field :breakfast_drink,:style=>"display: block;padding-left:5px;",:placeholder => "Drink" %>
      </div>
      <div class="col-md-4">
      <b>Lunch</b>
        <%= f.input_field :lunch_meal,:style=>"display: block;padding-left:5px;",:placeholder => "Dish" %><br>
      <%= f.input_field :lunch_drink,:style=>"display: block;padding-left:5px;",:placeholder => "Drink" %>
      </div>
      <div class="col-md-4">
      <b>Dinner</b>
      <%= f.input_field :dinner_meal,:style=>"display: block;padding-left:5px;",:placeholder => "Dish" %><br>
      <%= f.input_field :dinner_drink,:style=>"display: block;padding-left:5px;",:placeholder => "Drink" %>
      </div>
    </div>
    </center>
  </div>
  <br>
  <br>
<hr class="hr-meals">
      
      <div class="row">
       
      <div class="col-md-4" style=>
      </div>
      <div class="col-md-4">
      <center>
      <%= f.input :price, :style=>"display:block;" %>
      </center>
      </div>

      <div class="col-md-4">
              <div class="form-actions">
    <%= f.button :submit,:style=>"position:absolute;right:58px;bottom:-50px;",:class=>"choosebtnaddm" %>
      </div>
      </div>

      </div>
<% end %>
      </div>

    </div>

  </div>
</div>
</body>
<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="bootstrap.min.js"></script>

</html>







