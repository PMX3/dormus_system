<%= simple_form_for(@violation) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :violation_type %>
    <%= f.input :violation_points %>
    <%= f.input :violation_description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
