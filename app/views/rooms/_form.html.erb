<%= simple_form_for(@room) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :room_number %>
    <%= f.input :room_type %>
    <%= f.input :room_capacity %>
    <%= f.input :room_price %>
    <%= f.input :occupant_count %>
    <%= f.input :room_status %>
    <%= f.input :floor_area %>
    <%= f.input :bed_count %>
    <%= f.input :bathroom_count %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
