<p id="notice"><%= notice %></p>

<h1>Listing Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Room number</th>
      <th>Room type</th>
      <th>Room capacity</th>
      <th>Room price</th>
      <th>Occupant count</th>
      <th>Room status</th>
      <th>Floor area</th>
      <th>Bed count</th>
      <th>Bathroom count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.room_number %></td>
        <td><%= room.room_type %></td>
        <td><%= room.room_capacity %></td>
        <td><%= room.room_price %></td>
        <td><%= room.occupant_count %></td>
        <td><%= room.room_status %></td>
        <td><%= room.floor_area %></td>
        <td><%= room.bed_count %></td>
        <td><%= room.bathroom_count %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

