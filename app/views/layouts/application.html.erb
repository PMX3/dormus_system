<!DOCTYPE html>
<html>
<head>
	<title>DORMUS</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
	<link rel="shortcut icon" href="/assets/favicon.ico" />
</head>
<nav class="navbar navbar-custom navbar-inverse .navbar-fixed-top">
	<div class="container-fluid">
		<!-- Brand and toggle get grouped for better mobile display -->
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<% if user_signed_in? %>
				<% if current_user.isAdmin %>
					<a class="navbar-brand" href=""><%= link_to image_tag("/assets/dormus_logo.png", :class=> "dormus_logo"), applicants_path %></a>
				<% elsif current_user.isParent %>
					<a class="navbar-brand" href=""><%= link_to image_tag("/assets/dormus_logo.png", :class=> "dormus_logo"), show_dormer_path(current_user.user_type.applicant) %></a>
				<% else %>
					<a class="navbar-brand" href=""><%= link_to image_tag("/assets/dormus_logo.png", :class=> "dormus_logo"), show_dormer_path(current_user.user_type) %></a>
				<% end %>
			<% else %>
				<a class="navbar-brand" href="/"><img id="dormus_logo" src="/assets/dormus_logo.png"></a>
			<% end %>		
		</div>

		<!-- Collect the nav links, forms, and other content for toggling -->
		<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			<% if user_signed_in? %>
				<% if current_user.isParent %>
					<ul class="nav navbar-nav navbar-right">
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><font style="font-size: 10px;">Parent of </font><%=  current_user.user_type.applicant.first_name + " " + current_user.user_type.applicant.last_name %><span class="caret"></span></a>
							<ul class="dropdown-menu" style="background-color:white">
								<li><center><%= link_to "Logout", destroy_user_session_path, method: :delete %></center></li>
								<li></li>
							</ul>
						</li>
					</ul>
				<% elsif current_user.isAdmin %>
					<ul class="nav navbar-nav navbar-right">
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dormers<span class="caret"></span></a>
							<ul class="dropdown-menu" style="background-color:white">
								<li><center><%= link_to "Applications", applicants_path %></center></li>
								<li></li>
							</ul>
						</li>
						<li>
							<a href=""><%= link_to "Rooms", rooms_path %></a>
						</li>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Services<span class="caret"></span></a>
							<ul class="dropdown-menu" style="background-color:white">
								<li><center><%= link_to "Meal Plans", new_food_plan_path %></center></li>
								<li><center><%= link_to "Laundry" %></center></li>
								<li><center><%= link_to "Door Log" %></center></li>
								<li></li>
							</ul>
						</li>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Finances<span class="caret"></span></a>
							<ul class="dropdown-menu" style="background-color:white">
								<li><center><%= link_to "View Transactions" %></center></li>
								<li><center><%= link_to "Add Transactions" %></center></li>
								<li><center><%= link_to "Utility" %></center></li>
								<li></li>
							</ul>
						</li>
						<li>
							<a href=""><%= link_to "Logout", destroy_user_session_path, method: :delete %></a>
						</li>
					</ul>
				<% else %>
					<ul class="nav navbar-nav navbar-right">
						<li>
							<a href="">Meal Plans</a>
						</li>
						<li>
							<a href="">Laundry Services</a>
						</li>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.user_type.first_name + " " + current_user.user_type.last_name %><span class="caret"></span></a>
							<ul class="dropdown-menu" style="background-color:white">
								<li><center><%= link_to "Edit Profile", edit_applicant_path(current_user.user_type) %></center></li>
								<li><center><%= link_to "Logout", destroy_user_session_path, method: :delete %></center></li>
								<li></li>
							</ul>
						</li>
					</ul>
				<% end %>
			<% else %>
				<ul class="nav navbar-nav">
					<li class="active"><a href="#">Application <span class="sr-only">(current)</span></a></li>
					<li><a href="http://mydorm.ph/">myDorm.ph</a></li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li class="p1_exi"><a class="p1_existacc" >Already have an account?</a></li>
					<li><a href="/users/sign_in">Sign in</a></li>
				</ul>
			<% end %>
		</div><!-- /.navbar-collapse -->
	</div><!-- /.container-fluid -->
</nav>

<body>

	<%= yield %>

</body>
</html>
