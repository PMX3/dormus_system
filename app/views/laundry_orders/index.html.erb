<p id="notice"><%= notice %></p>

<h1>Listing Laundry Orders</h1>

<table>
  <thead>
    <tr>
      <th>Payment due</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @laundry_orders.each do |laundry_order| %>
      <tr>
        <td><%= laundry_order.payment_due %></td>
        <td><%= link_to 'Show', laundry_order %></td>
        <td><%= link_to 'Edit', edit_laundry_order_path(laundry_order) %></td>
        <td><%= link_to 'Destroy', laundry_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

